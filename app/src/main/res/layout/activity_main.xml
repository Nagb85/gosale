    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_height="50sp"
        android:ellipsize="start"
        android:drawableStart="@drawable/vector_before"
        style="@style/text_inicio_vista"
        android:gravity="end"
        android:text="Go Sale"
        android:singleLine="true"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/loggosale" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">

            <Button
                android:id="@+id/textProducto"
               style="@style/CÃ¡talogoButtonRoundStyle"/>

            <Button
                style="@style/ClienteButtonRoundStyle"/>

            <Button
                style="@style/VisitaButtonRoundStyle"/>
        </LinearLayout>
        <LinearLayout
           style="@style/LinearLayautButtonStyle">

            <Button
                style="@style/OrdenButtonRoundStyle"/>

            <Button
               style="@style/RecaudoButtonRoundStyle"/>

            <Button
                style="@style/DevolucionButtonRoundStyle"/>
        </LinearLayout>
        <LinearLayout
            style="@style/LinearLayautButtonStyle">

            <Button
              style="@style/EstadisticaButtonStyle"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:background="@color/black"
            android:id="@+id/text_salir"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/vector_exit"
            android:layout_marginStart="320dp"/>
    </LinearLayout>

</LinearLayout>